{
  "info": {"name": "Blog Service", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"},
  "variable": [{"key": "baseUrl", "value": "http://localhost:3006"}],
  "item": [
    {"name": "Health", "request": {"method": "GET", "url": "{{baseUrl}}/"}},
    {
      "name": "Create Post",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "{{baseUrl}}/posts",
        "body": {"mode": "raw", "raw": "{\n  \"title\": \"Post\",\n  \"body\": \"Content\",\n  \"author\": \"user1\"\n}"}
      }
    },
    {"name": "List Posts", "request": {"method": "GET", "url": "{{baseUrl}}/posts"}},
    {"name": "Get Post", "request": {"method": "GET", "url": "{{baseUrl}}/posts/1"}}
  ]
}
