{
  "info": {
    "name": "Auth Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:3001"}
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/"
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "{{baseUrl}}/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"jane\",\n  \"password\": \"secret\"\n}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "{{baseUrl}}/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"jane\",\n  \"password\": \"secret\"\n}"
        }
      }
    }
  ]
}
