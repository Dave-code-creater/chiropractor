{
  "info": {
    "name": "User Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:3002"}
  ],
  "item": [
    {
      "name": "Health",
      "request": {"method": "GET", "url": "{{baseUrl}}/"}
    },
    {
      "name": "Create Profile",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "{{baseUrl}}/profiles",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"identity_id\": 1,\n  \"email\": \"test@example.com\"\n}"
        }
      }
    },
    {
      "name": "Get Profile",
      "request": {"method": "GET", "url": "{{baseUrl}}/profiles/1"}
    },
    {
      "name": "Update Profile",
      "request": {
        "method": "PUT",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "{{baseUrl}}/profiles/1",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"new@example.com\"\n}"
        }
      }
    }
  ]
}
