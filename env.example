# =============================================================================
# CHIROPRACTOR PRACTICE MANAGEMENT SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment
# NEVER commit the actual .env file to version control!

# =============================================================================
# COMMON CONFIGURATION
# =============================================================================
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173
LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure JWT secret (minimum 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-chars
JWT_EXPIRES_IN=1h

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Password hashing
BCRYPT_ROUNDS=12

# =============================================================================
# DATABASE CONFIGURATION - POSTGRESQL
# =============================================================================
# Auth Service Database
AUTH_DB_USER=auth_user
AUTH_DB_PASS=secure_auth_password_here
AUTH_DB_NAME=auth_db
AUTH_DB_PORT=5433

# User Service Database  
USER_DB_USER=user_user
USER_DB_PASS=secure_user_password_here
USER_DB_NAME=user_db
USER_DB_PORT=5434

# Appointment Service Database
APPOINTMENT_DB_USER=appointment_user
APPOINTMENT_DB_PASS=secure_appointment_password_here
APPOINTMENT_DB_NAME=appointment_db
APPOINTMENT_DB_PORT=5435

# Report Service Database
REPORT_DB_USER=report_user
REPORT_DB_PASS=secure_report_password_here
REPORT_DB_NAME=report_db
REPORT_DB_PORT=5436

# Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=false

# =============================================================================
# DATABASE CONFIGURATION - MONGODB
# =============================================================================
# Blog Service MongoDB
BLOG_MONGO_PORT=27017

# Chat Service MongoDB  
CHAT_MONGO_PORT=27018

# =============================================================================
# SERVICE PORTS
# =============================================================================
GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
BLOG_SERVICE_PORT=3003
CHAT_SERVICE_PORT=3004
APPOINTMENT_SERVICE_PORT=3005
REPORT_SERVICE_PORT=3006

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Email Service (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis (for caching, sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# MONITORING & LOGGING (Optional)
# =============================================================================
# Application monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Health check endpoints
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# These should be set differently in production
# SESSION_SECRET=your-production-session-secret-here
# DATABASE_SSL=true
# CORS_ORIGIN=https://your-production-domain.com
# LOG_LEVEL=warn 